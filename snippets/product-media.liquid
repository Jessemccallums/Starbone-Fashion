<!-- product-media.liquid -->
{% case media.media_type %}
  {% when 'image' %}
    <img src="{{ media | img_url: '3800x' }}" alt="{{ media.preview_image.alt }}" class="w-full h-full object-cover">
  {% when 'external_video', 'video' %}
    {{ media | media_tag: loading: 'lazy', class: 'w-full h-80 object-cover' }}
  {% when 'model' %}
    {{ media | model_viewer_tag: class: 'w-full h-80' }}
  {% else %}
    {{ media | media_tag: class: 'w-full h-80' }}
{% endcase %}

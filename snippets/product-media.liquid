{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="w-full h-full object-cover">
    
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}

    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'video' }}

    {% when 'model' %}
        {{ media | model_viewer_tag }}

    {% else %}
        {{ media | media_tag }}
    
    {% else %}
        
{% endcase %}


<style>

    .video{
        width: 100%;
        height: 100%;
    }

    /* Example CSS for styling different media types */

/* Image */
img.w-full {
    width: 100%;
}

img.h-full {
    height: 100%;
}

img.object-cover {
    object-fit: cover;
}

/* External Video */
.video-external {
    /* Define styles for external videos */
    width: 100%;
    height: 100%; /* Adjust as needed */
    object-fit: cover;
}

/* Video */
.video {
    /* Define styles for videos */
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Model */
.model-viewer {
    /* Define styles for model viewer */
}

/* Default Media Tag Styles */
.media {
    /* Define styles for other media types */
}


</style>
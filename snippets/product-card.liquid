<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform"
            src="{{ product_product.featured_image | img_url: 'medium' }}"
            alt="{{ product_product.featured_image.alt }}"
          >
        </div>

      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">
      <span class="titulol">{{ product_product.vendor }}</span>

      <a href="{{ product_product.url }}" class="titulol">{{ product_product.title }}</a>

      <p class="titulo">{{ product_product.price | money }}</p>
    </div>
  </div>
</div>

<style>
   @import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap');
  /* Base styles for the product container */
  .w-full.py-6.px-3 {
      width: 100%;
      padding-top: 1.5rem;
      padding-bottom: 1.5rem;
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }
    .titulo{
      font-family: 'Libre Baskerville', serif;
    }
    .titulol{
      font-family: 'Pierson', 'Libre Baskerville', serif;
    }

    /* Styles for the product container */
    .border.bg-white.shadow-lg.rounded-lg.overflow-hidden {
      border: 1px solid #e2e8f0;
      background-color: #ffffff;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      border-radius: 0.375rem;
      overflow: hidden;

    }

    /* Styles for the product image */
    a[href="{{ product_product.url }}"] .h-80.overflow-hidden {
      height: 27rem;
      overflow: hidden;
    }

    a[href="{{ product_product.url }}"] .w-full.h-full.object-cover.transition.duration-1000.ease-in-out.hover\:scale-105.transform {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition-duration: 1000ms;
      transition-timing-function: ease-in-out;
    }

    /* Styles for the product details */
    .flex.flex-col.p-4 {
      display: flex;
      flex-direction: column;
      padding: 1rem;
    }

    .text-sm.text-gray-400 {
      font-size: 0.875rem;
      color: #718096;
    }

    a[href="{{ product_product.url }}"].text-gray-700.uppercase.font-medium {
      text-decoration: none;
      color: #4a5568;
      text-transform: uppercase;
      font-weight: 500;
    }

    p.text-gray-500 {
      color: #718096;
    }

    /* Placeholder image styles (if used) */
    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }} {
      width: 100%;
      height: 100%;
      object-fit: cover;
      background-color: #f7fafc;
    }
</style>

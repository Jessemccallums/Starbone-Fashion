<!-- sections/nav-section.liquid -->
<div class="logheader">
  <ul>
    <li class="li">
      <a href="/search" class="a">{% render 'search' %}</a>
    </li>
  </ul>
  <h1 class="h1">
    <a href="/" class="a-title">{{ section.settings.header_title }}</a>
  </h1>
  <div class="accountheader1">
    {% if customer %}
      <li class="li"><a href="/account" class="a">Account</a></li>
      <li class="li"><a href="/account/logout" class="a">Logout</a></li>
    {% else %}
      <li class="li"><a href="/account/login" class="a">Login</a></li>
      <li class="li"><a href="/account/register" class="a">Create Account</a></li>
    {% endif %}
  </div>
</div>
<div class="header">
  <button class="button">
    <!-- SVG content for the hamburger menu -->
    <svg class="svg" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
    </svg>
  </button>

  <nav class="nav">
    <ul class="ul">
      {% assign linklist = linklists['main-menu'] %}
      {% for link in linklist.links %}
        <li class="li">
          <a href="{{ link.url }}" class="a">{{ link.title }}</a>
        </li>
      {% endfor %}
      <!-- Additional links for Login/Create Account -->
    </ul>
    <div class="accountheader">
      {% if customer %}
        <li class="li"><a href="/account" class="a">Account</a></li>
        <li class="li"><a href="/account/logout" class="a">Logout</a></li>
      {% else %}
        <li class="li"><a href="/account/login" class="a">Login</a></li>
        <li class="li"><a href="/account/register" class="a">Create Account</a></li>
      {% endif %}
    </div>
  </nav>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const button = document.querySelector('.button');
    const nav = document.querySelector('.nav');
    const accountheader = document.querySelector('.accountheader');

    button.addEventListener('click', function () {
      nav.classList.toggle('activo');
      accountheader.classList.toggle('activo');
    });
  });
</script>

<style>
  /* CÃ³digo */
  .logheader {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px;
  }
  .a-title {
    font-size: 30px;
  }
  .accountheader1 {
    display: flex;
    gap: 20px;
  }
  .accountheader1 .li {
    list-style: none;
  }

  .header {
    width: 100%;
    background-color: {{ section.settings.color }};
    padding: 1em;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    align-items: center;
    color: white;
  }
  .header .h1 {
    /* background-color: aqua; */
  }
  .header .a {
  }

  .header .button {
    /* background-color: crimson; */
    display: none;
  }
  .header .svg {
    width: 2em;
    height: 2em;
    fill: white;
  }
  .header .nav {
    /* background-color: bisque; */
  }
  .header .ul {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: center;
  }
  .header .li {
    margin: 0 0.5em;
  }
  .header .ul .li {
    list-style: none;
    color: {{ section.settings.color_text }};
  }
  .accountheader {
    display: none;
  }

  @media screen and (max-width: 480px) {
    .accountheader1 {
      display: none;
    }
    .header .button {
      display: block;
      cursor: pointer;
    }
    .accountheader {
      display: block;
    }
    .accountheader .li {
      list-style: none;
    }
    .header {
      width: 100%;
      background-color: #282828;
      padding: 1em;
      display: flex;
      flex-flow: row wrap;
      justify-content: flex-end;
      align-items: center;
      color: white;
    }

    .header .nav {
      width: 100%;
      /* display: none; */
      height: 0;
      pointer-events: none;
      overflow: hidden;
      transition: all 0.5s ease;

      display: flex;
      flex-flow: column nowrap;
      justify-content: center;
      align-items: center;
    }
    .header .nav.activo {
      /* display: block; */
      height: 100vh;
      pointer-events: auto;
    }
    .header .accountheader.activo {
      /* display: block; */
      height: 100vh;
      pointer-events: auto;

      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .header .ul {
      flex-direction: column;
    }
    .header .li {
      margin: 1rem 0;
    }
  }
</style>

{% schema %}
{
  "name": "Navigation",
  "settings": [
    {
      "type": "text",
      "id": "header_title",
      "label": "Header Title",
      "default": "STARBONE"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Section Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Section Color",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}

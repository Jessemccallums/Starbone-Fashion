
<!-- Navigation Bar -->
<nav class="navbar">
    <div class='navtop'>
        <div class='search'>
            {% render 'search' %}
        </div>
        <div>
            <h1 class='h1'>{{ section.settings.text }}</h1>
        </div>
        <div class='icons'>
            {% render 'icon-bag' %}
        </div>
    
    </div>
    <div class="navbar-container">
        <!-- Hamburger Menu Button -->
        <button class="hamburger" id="hamburger">
            ☰
        </button>
        
        <!-- Logo -->
        {% comment %} <a href="/" class="nav-logo" id='text'>
            {{ section.settings.text }}
        </a> {% endcomment %}

        <!-- Navigation Links -->
        <div class="nav-links" id="navLinks">
            {% for link in linklists.main-menu.links %}
                {% if link.links != blank %}
                    <div>
                        <button class='btn dropdown-button'>
                            {{ link.title }}
                            {% render 'icon-dropdown' %}
                        </button>
                        <div class="dropdown-content">
                            {% for sublink in link.links %}
                                <a class='subtitle' href="{{ sublink.url }}">{{ sublink.title }}</a>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <div class='menu'>
                        <a class='title' href="{{ link.url }}">
                            {{ link.title }}
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        
        <!-- Account Links -->
        {% comment %} <div class='links' id="navLinks">
            <a href="/cart" class="nav-link">
                {% render 'icon-shopping-bag' %} 
                ({{ cart.item_count }})
            </a>
            {% if shop.customer_accounts_enabled %}
                    <a href="{{ routes.account_login_url }}" class="nav-button">Login</a>
                    <a href="{{ routes.account_register_url }}" class="nav-button register">Register</a>
            {% endif %}
        </div> {% endcomment %}
    </div>
</nav>


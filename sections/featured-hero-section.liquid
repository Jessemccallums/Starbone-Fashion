<div class="custom-section">
    <div class="container mx-auto px-4">
      <div class="image">
        {% if section.settings.image != blank %}
          <img class='img' src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.title | escape }}">
        {% endif %}
      </div>
  </div>
</div>
  <style>
    .img {
      width: 100%;
      height: 100%;
    }
    /* Add your styles here */
  </style>

  
  {% schema %}
{
  "name": "Hero section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Hero section"
    }
  ]
}
{% endschema %}

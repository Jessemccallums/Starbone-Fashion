<div class="custom-section" style="height: {{ section.settings.banner_height }}%; position: relative;">
  <div class="container-2 mx-auto flex items-center justify-{{ section.settings.desktop_alignment }} relative">
    <!-- Conditional check and display for Image 1 with a default fallback -->
    <div class="{% if section.settings.image2 != blank %}img_hero{% else %}img_one{% endif %}">
      <img
        class="img"
        src="{% if section.settings.image1 != blank %}{{ section.settings.image1 | img_url: '3800x' }}{% else %}https://images.unsplash.com/photo-1711976972831-d81e4a3c9d33?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90oy1wYWdlfHx8fGVufDB8fHx8fA%3D%3D{% endif %}"
        alt="{{ section.settings.title | escape }}"
      >
      <div class="overlay" style="opacity: {{ section.settings.overlay_opacity }};"></div>
    </div>

    <!-- Conditional check and display for Image 2 -->
    {% if section.settings.image2 != blank %}
      <div class="img_hero">
        <img
          class="img"
          src="{{ section.settings.image2 | img_url: '3800x' }}"
          alt="{{ section.settings.title | escape }}"
        >
        <div class="overlay" style="opacity: {{ section.settings.overlay_opacity }};"></div>
      </div>
    {% endif %}

    <div class="text-overlay-container absolute top-0 left-0 w-full h-full flex items-center justify-center">
      <div
        class="text-button-container"
        style="font-size: {{ section.settings.text_size }}px; color: {{ section.settings.text_color }}; text-align: {{ section.settings.desktop_alignment }}"
      >
        <h1 style="font-size: {{ section.settings.text_size }}px;">{{ section.settings.text }}</h1>
        <a
          href="{{ section.settings.button_link }}"
          class="btnhero"
          style="font-size: {{ section.settings.button_size }}px; color: {{ section.settings.button_text_color }}; background-color: {{ section.settings.button_bg_color }}; border-color: {{ section.settings.button_border_color }};"
        >
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap');

  .img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .img_one{

    object-fit: cover;
    width: 100rem;
    height: 33rem;
  }
  .img_hero{

    height: 500px;
    width: 1292px;
    object-fit: cover;
  }
  {% comment %} .image-wrapper {
    position: relative;
    overflow: hidden;
    height: {{ section.settings.banner_height }}%; /* Asegura que ambas imágenes tengan el mismo tamaño */
  } {% endcomment %}
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Default overlay opacity */
  }
  .text-overlay-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .text-button-container {
    text-align: center;
  }
  .btnhero {
    font-family: 'Libre Baskerville', serif;
    display: inline-block;
    padding: 8px 43px;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    border: 1px solid;
  }
  @media (min-width: 768px) {
    .container-2 {
      max-width: 100%;
      margin: 0 auto; /* Center the container */
    }
    .text-button-container{
      padding: {{  section.settings.section_padding_desktop }}px;
    }
  }

  @media (max-width: 768px) {
   .text-button-container{
    padding: {{  section.settings.section_padding_mobile }}px;
  }
  }
</style>

{% schema %}
{
  "name": "Hero section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2 (Optional)"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Welcome to our store"
    },
    {
      "type": "range",
      "id": "section_padding_mobile",
      "label": "Section Padding Mobile (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_padding_desktop",
      "label": "Section Padding Desktop (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "read more"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Image Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    },
    {
      "type": "range",
      "id": "banner_height",
      "label": "Banner Height (% of viewport height)",
      "min": 100,
      "max": 500,
      "step": 10,
      "default": 200
    },
    {
      "type": "select",
      "id": "desktop_alignment",
      "label": "Desktop Content Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Size",
      "min": 10,
      "max": 80,
      "step": 1,
      "default": 50
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button Border Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "button_size",
      "label": "Button Size",
      "min": 10,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Hero section"
    }
  ]
}
{% endschema %}
<script>
  ScrollReveal().reveal('.custom-section', { delay: 500, reset: false });
</script>

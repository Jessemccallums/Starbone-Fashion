{% comment %}
  Customizable Slideshow Section with Editable Button Background Color and Text Sizes
{% endcomment %}

<div class="slideshow-container">
  {% for block in section.blocks %}
    <div class="mySlides fade">
      <img src="{{ block.settings.image | img_url: '800x' }}" alt="" style="width:100%;">
      <div class="slide-text" style="font-size: {{ block.settings.text_size }}px;">
        {{ block.settings.slide_text }}
        <a
          href="{{ block.settings.button_url }}"
          class="slide-button"
          style="background-color: {{ block.settings.button_bg_color }}; font-size: {{ block.settings.button_text_size }}px;"
        >
          {{- block.settings.button_text -}}
        </a>
      </div>
    </div>
  {% endfor %}
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>

<style>
  .slideshow-container {
    position: relative;
    max-width: 100%;
    height: 500px;
    margin: auto;
    overflow: hidden;
  }

  .mySlides {
    display: none;
    position: relative;
    height: 100%;
  }

  .mySlides img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .slide-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white; /* Adjust based on your needs */
  }

  .slide-button {
    display: inline-block;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .slide-button:hover {
    opacity: 0.8;
  }

  .prev,
  .next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    margin-top: -22px;
    padding: 16px;
    color: white;
    font-weight: bold;
    font-size: 18px;
    transition: 0.6s ease;
    user-select: none;
  }

  .next {
    right: 0;
  }

  .prev {
    left: 0;
  }
</style>

<script>
  var slideIndex = 1;
  showSlides(slideIndex);

  function plusSlides(n) {
    showSlides((slideIndex += n));
  }

  function showSlides(n) {
    var i;
    var slides = document.getElementsByClassName('mySlides');
    if (n > slides.length) {
      slideIndex = 1;
    }
    if (n < 1) {
      slideIndex = slides.length;
    }
    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = 'none';
    }
    slides[slideIndex - 1].style.display = 'block';
  }
</script>

{% schema %}
{
  "name": "Customizable Slideshow",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "slide_text",
          "label": "Slide Text",
          "default": "Your Slide Text Here"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL",
          "default": "http://example.com"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button Background Color",
          "default": "#007bff"
        },
        {
          "type": "range",
          "id": "button_text_size",
          "label": "Button Text Size",
          "min": 10,
          "max": 24,
          "step": 1,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "text_size",
          "label": "Text Size",
          "min": 10,
          "max": 24,
          "step": 1,
          "default": 20,
          "unit": "px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customizable Slideshow",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="about-us-container">
  <h1 class="text">{{ page.title }}</h1>
  <div class="text1">{{ page.content }}</div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');

  .text1 p {
    opacity: 0;
    transition: opacity 1s ease-out;
  }

  /* Animation keyframes */
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .text {
    font-size: 80px;
    color: black;
    text-align: left;
    width: 70%;
    margin: auto;
  }
  .text1 {
    font-size: 20px;
    text-align: left;
    width: 70%;
    margin: auto;
    color: #000000;
    display: flex;
    flex-direction: column;
    gap: 40px;
    font-family: 'Montserrat', sans-serif;
    font-optical-sizing: auto;
    font-weight: 300;
    font-style: normal;
  }
  @media (min-width: 768px) {
    .about-us-container {
      margin-top: 100px;
      margin-bottom: 100px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
      margin-left: 70px;
      margin-right: 70px;
    }
  }
  @media (max-width: 767px) {
    .text {
      font-size: 40px;
      color: black;
      text-align: left;
      width: 70%;
      margin: auto;
    }
    .text1 {
      font-size: 20px;
      text-align: left;
      width: 70%;
      margin: auto;
      color: #000000;
      display: flex;
      flex-direction: column;
      gap: 40px;
      font-family: 'Montserrat', sans-serif;
      font-optical-sizing: auto;
      font-weight: 300;
      font-style: normal;
    }
    .about-us-container {
      margin-top: 100px;
      margin-bottom: 100px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Trigger the fadeIn effect
            entry.target.style.animation = 'fadeIn 1s forwards';
          }
        });
      },
      {
        threshold: 0.1, // Adjust this value based on when you want the animation to start
      }
    );

    // Observe all paragraphs within .text1
    document.querySelectorAll('.text1 p').forEach((p) => {
      observer.observe(p);
    });
  });
</script>

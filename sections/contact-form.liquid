    width: 30px;
  }

  .border {
    border-width: 1px;
    border: 1px solid #c7c7c7;
  }
  .btn-contact-text {
    font-family: 'Montserrat', sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }

  .py-3 {
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
  }

  .px-1 {
    padding-left: 0.25rem;
    padding-right: 0.25rem;
  }

  .mb-3 {
    margin-bottom: 0.75rem;
  }

  .ml-7 {
    margin-left: 1.75rem;
  }

  .w-full {
    width: 100%;
  }

  .cursor-pointer {
    cursor: pointer;
  }

  .py-2 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  /* Background and hover styles */
  .bg-gray-900 {
    background-color: #111827;
  }

  .bg-gray-700 {
    background-color: #4b5563;
  }

  .hover\:bg-gray-700:hover {
    background-color: #4b5563;
  }

  /* Button styles */
  .border-gray-900 {
    border-color: #111827;
  }

  .bg-gray-900 {
    background-color: #111827;
  }

  .text-base {
    font-size: 1rem;
  }

  .font-medium {
    font-weight: 500;
  }

  .text-white {
    color: #ffffff;
  }

  .hover\:bg-gray-700:hover {
    background-color: #4b5563;
  }

  /* Form input styles */
  .input {
    display: block;
    width: 100%;
    padding: 0.75rem 1rem;
    margin-bottom: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.25rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #374151;
    background-color: #f3f4f6;
  }

  /* Other styles */
  .hidden {
    display: none;
  }

  /* Icon styles (You may need to adjust these based on your actual icon styles) */
  .icon-failed {
    width: 30px;
    color: red;
  }
  .icon-success {
    width: 30px;
    color: green;
  }

  .icon-dropdown,
  .icon-bag {
    /* Add your icon styles here */
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    /* Add your responsive styles here */
  }

  .h1 {
    font-size: 50px;
    color: black;
    margin-left: 20px;
    text-align: center;
  }
</style>

<script>
    {% if request.design_mode %}
      document.addEventListener("shopify:section:load", function(event) {
            AOS.init();
      });
  {% endif %}
  AOS.init();
</script>


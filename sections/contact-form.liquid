<div class='contact'>
    <div class='title'>
        {% if section.settings.title != blank %}
            <h1 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
        {% endif %}
    </div>
    {% form 'contact' %}
        <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
                {% if form.errors %}
                    <div class="border p-5">
                        <div class="flex flex-row items-center w-full my-3">
                            <div class="text-red-500">
                                {% render 'icon-failed' %}
                            </div>
                            <div class="text-sm font-medium ml-3">
                                Oh no! Your message is not sent
                            </div>
                        </div>
                        <ul class="px-4 mb-3 ml-7 list-decimal">
                            {% for error in form.errors %}
                                <li>
                                    <span>{{ form.errors.messages[error] }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% elsif form.posted_successfully? %}
                    <div class="flex flex-row items-center w-full my-3 p-5">
                        <div class="text-green-500">
                            {% render 'icon-success' %}
                        </div>
                        <div class="text-sm font-medium ml-3">Message was sent successfully</div>
                    </div>
                {% endif %}

                <div class="px-1 md:flex mb-3">
                    <div class="px-3 md:w-1/2">
                        <label for="contact_name" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label>
                        <input 
                            type="text" 
                            name="contact[name]" 
                            id="contact_name" 
                            class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
                            placeholder="Jane Doe"
                            required
                        >
                    </div>
                    <div class="px-3 md:w-1/2">
                        <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">Email</label>
                        <input 
                            type="email" 
                            name="contact[email]" 
                            id="contact_email" 
                            class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
                            placeholder="jane@doe.com"
                            required
                        >
                    </div>
                </div>
                <div class="px-1 md:flex mb-3">
                    <div class="message">
                        <label for="contact_message" class="text-gray-700 font-medium uppercase text-xs mb-2">Comment</label>
                        <textarea class="w-full text-gray-700 resize-none h-20 py-2 px-3 focus:outline-none border" name="contact[body]" id="contact_message" required></textarea>
                    </div>
                </div>
                <div class="px-1 md:flex mb-3">
                    <div class="btn">
                        <input type="submit" class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500" value="Submit message">
                    </div>
                </div>
            </div>
        {% endform %}
</div>


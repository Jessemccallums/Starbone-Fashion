<div class="contact">
  <div class="pierson">
    {% if section.settings.title != blank %}
      <h1 class="h1">{{ section.settings.title }}</h1>
    {% endif %}
  </div>
  {% form 'contact' %}
    <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
      {% if form.errors %}
        <div class="border p-5">
          <div class="flex flex-row items-center w-full my-3">
            <div class="text-red-500">
              {% render 'icon-failed' %}
            </div>
            <div class="text-sm font-medium ml-3">Oh no! Your message is not sent</div>
          </div>
          <ul class="px-4 mb-3 ml-7 list-decimal">
            {% for error in form.errors %}
              <li>
                <span>{{ form.errors.messages[error] }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% elsif form.posted_successfully? %}
        <div class="flex flex-row items-center w-full my-3 p-5">
          <div class="text-green-500">
            {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">Message was sent successfully</div>
        </div>
      {% endif %}

      <div class="gap-name-email px-1 md:flex mb-3">
        <div class=" md:w-1/2">
          {% comment %} <label for="contact_name" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label> {% endcomment %}
          <input
            data-aos="fade-up"
            type="text"
            name="contact[name]"
            id="contact_name"
            class="black-contact placeholder-contact-form w-full border py-3 px-4 mb-3 "
            placeholder="Name"
            required
          >
        </div>
        <div class="md:w-1/2">
          {% comment %} <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">Email</label> {% endcomment %}
          <input
            data-aos="fade-up"
            type="email"
            name="contact[email]"
            id="contact_email"
            class="black-contact placeholder-contact-form w-full border py-3 px-4 mb-3 focus:outline-none"
            placeholder="Email *"
            required
          >
        </div>
      </div>
      <div class="px-1 md:flex mb-3">
        <div class="message">
          {% comment %} <label for="contact_message" class="text-gray-700 font-medium uppercase text-xs mb-2">Comment</label> {% endcomment %}
          <textarea
            data-aos="fade-up"
            class="black-contact placeholder-contact-form w-full resize-none h-20 py-2 px-3 focus:outline-none border"
            name="contact[body]"
            id="contact_message"
            placeholder="Comment"
            required
          ></textarea>
        </div>
      </div>
      <div class="px-1 md:flex mb-3">
        <div class="btn-contact ">
          <input
            data-aos="fade-up"
            type="submit"
            class="btn-contact-text  w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500"
            value="Send"
          >
        </div>
      </div>
    </div>
  {% endform %}
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');

  .contact {
    width: 100%;

  }

  .text-gray-500 {
    color: #6b7280;
  }

  .text-gray-700 {
    color: #4b5563;
  }

  .text-gray-900 {
    color: #1f2937;
  }

  .text-red-500 {
    color: #ef4444;
    width: 30px;
  }

  .box {

<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>

    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
                {% render 'product-card', product_product: product %}
            {% else %}
                {% for item in (1..4) %}
                    {% render 'product-card-placeholder' %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>
<style>
    
    /* Base styles for the container */
    .flex.flex-col.items-center.my-8 {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  
  /* Styles for the section title */
  .text-center.text-3xl {
    text-align: center;
    font-size: 1.875rem;
  }
  
  /* Styles for the container with grid */
  .max-w-6xl.mx-auto {
    max-width: 72rem;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Styles for the grid and grid items */
  .grid.grid-cols-1.md\:grid-cols-4.gap-4 {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 1rem;
  }
  
  /* Placeholder styles (if used) */
  /* Add your placeholder styles here */
  
  
</style>

{% schema %}
{
    "name": "Featured Collection",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Featured Collection",
            "label": "Title"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "number_of_products_to_show",
            "min": 4,
            "max": 12,
            "default": 4,
            "label": "Number of products to show"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}
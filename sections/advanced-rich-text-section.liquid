<!-- Advanced Rich Text Section -->
<section
  class="advanced-rich-text-section"
  style="background-color: {{ section.settings.background_color }};"
>
  {% for block in section.blocks %}
    <div
      class="rich-text-block"
      style="text-align: {{ section.settings.content_position }}; "
    >
      <h1
        class="rich-title"
        style="color: {{ section.settings.title_color }}; "
      >
        {{ block.settings.title }}
      </h1>
      <div
        class="rich-text-description"
        style="color: {{ section.settings.text_color }}; "
      >
        {{ block.settings.description }}
      </div>
      {% if block.settings.button_text %}
        <a
          href="{{ block.settings.button_url }}"
          class="rich-text-button"
          style="background-color: {{ block.settings.button_bg_color }}; color: {{ block.settings.button_text_color }}; border-color: {{ block.settings.button_border_color }}; padding: 10px {{ section.settings.button_padding }}px; "
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  {% endfor %}
</section>

<!-- Styles -->
<style>
    @import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap');
    @media (max-width: 767px) {
      .rich-text-button{
          font-size: {{ section.settings.button_text_size_mobile }}px;

      }
      .rich-text-description{
          font-size: {{ section.settings.description_text_size_mobile }}px;
      }
      .rich-title{
          font-size: {{ section.settings.title_text_size_mobile }}px;
      }
      .advanced-rich-text-section {
        text-align: {{ section.settings.content_position_mobile_text }};
        padding: {{ section.settings.section_padding_mobile }}px;
      }
  }

      .advanced-rich-text-section .rich-text-block {
        margin-bottom: 2rem;
      }

      .advanced-rich-text-section .rich-text-description {
        margin-bottom: 1rem;
      }
      .rich-text-description .rich-text-button {
      font-family: 'Libre Baskerville', serif;
    }

      .advanced-rich-text-section .rich-text-button {
        display: inline-block;
        text-decoration: none;
        border: 2px solid transparent;
        transition: background-color 0.3s ease;
      }

      /* Responsive adjustments */
      @media (min-width: 768px) {
        .advanced-rich-text-section {
          text-align: {{ section.settings.content_position_desktop_text }};
        }
        .rich-text-button{
            font-size: {{ section.settings.button_text_size }}px;

        }
        .rich-text-description{
            font-size: {{ section.settings.description_text_size }}px;
        }
        .rich-title{
            font-size: {{ section.settings.title_text_size }}px;
        }
        .advanced-rich-text-section {
            padding: {{ section.settings.section_padding }}px;
        }
      }
</style>


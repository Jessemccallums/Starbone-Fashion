<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="sign text-center text-3xl font-bold mt-6">Register an account</h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
            <strong class="sign font-bold">Error!</strong>
            <p class="sign block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="first_name" class="sign sr-only">First name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="first_name"
            autocomplete="given-name"
            class="inputbox relative block w-full px-3 py-2 border"
            placeholder="First name"
          >
        </div>

        <div class="my-2">
          <label for="last_name" class="sign sr-only">Last name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            autocomplete="family-name"
            class="inputbox relative block w-full px-3 py-2 border"
            placeholder="Last name"
          >
        </div>

        <div class="my-2">
          <label for="birthday" class="sign sr-only">Birthday</label>
          <input
            type="date"
            name="customer[note][Birthday]"
            id="birthday"
            class="inputbox relative block w-full px-3 py-2 border"
          >
        </div>

        <div class="my-2">
          <label for="email_address" class="sign sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="inputbox relative block w-full px-3 py-2 border"
            placeholder="Email address"
          >
        </div>

        <div class="my-2">
          <label for="password" class="sign sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="inputbox relative block w-full px-3 py-2 border"
            placeholder="Password"
          >
        </div>

        <div>
          <button type="submit" class="sign relative w-full py-2 px-4 text-sm font-medium text-white bg-black">
            Create account
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>


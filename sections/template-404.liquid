<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4"><p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p></div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
        {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.button_label }}</a>
    </div>
    
</div>

<style>
    @font_face {
        font-family: 'Pierson';
        font-style: normal;
        src: url(../fonts/TTF/Pierson-Light.ttf);
    }

    .my-4{
        font-family: 'Pierson';
        font-size: 50px;
        color: black;
        margin-left: 20px;
    }
    .max-w-md {
        max-width: 28rem; /* Este valor puede variar según tu diseño */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        
    }

    .text-5xl {
        font-size: 3rem; /* Ajusta según sea necesario */
    }

    .font-bold {
        font-weight: bold;
    }

    .my-4 {
        margin-top: 1rem; /* Ajusta según sea necesario */
        margin-bottom: 1rem; /* Ajusta según sea necesario */
    }

    .text-base {
        font-size: 1rem; /* Ajusta según sea necesario */
    }

    @media (min-width: 768px) {
        .md\:text-xl {
            font-size: 1.25rem; /* Ajusta según sea necesario */
        }
    }

    .leading-normal {
        line-height: normal;
    }

   

    .py-2 {
        padding-top: 0.5rem; /* Ajusta según sea necesario */
        padding-bottom: 0.5rem; /* Ajusta según sea necesario */
    }

    .shadow {
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    }

    .bg-green-600 {
        background-color: #16a34a; /* Este es un valor aproximado */
    }

    .bg-green-800:hover {
        background-color: #065f46; /* Este es un valor aproximado */
    }

    .text-white {
        color: white;
    }
</style>



{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "404",
            "label": "404 Heading Title"
        },
        {
            "type": "text",
            "id": "subtext_title",
            "default": "The page that you're looking for is not found",
            "label": "404 Subtext Title"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Back to homepage",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
        }
    ]
}
{% endschema %}
<div class="px-4 py-8">
    <a href="{{ routes.collections_url }}" class="text-base text-gray-500 hover:underline text-center block my-4">Go back to collections</a>
    {% paginate collection.products by section.settings.number_of_products_per_page %}
        <h1 class="text-3xl text-center">{{ collection.title }}</h1>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for product in collection.products %}
                    {% render 'product-card', product_product: product %}
                {% else %}
                    <p>There are no products inside of this collection</p>
                {% endfor %}
            </div>
        </div>
        

        {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
</div>



<style>
/* Base styles for the container */
.px-4.py-8 {
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  
  /* Styles for the collection title */
  .text-3xl.text-center {
    font-size: 1.875rem;
    text-align: center;
  }
  
  /* Styles for the container with grid */
  .max-w-6xl.mx-auto {
    max-width: 72rem;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Styles for the grid and grid items */
  .grid.grid-cols-1.md\:grid-cols-3.gap-4 {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1rem;
  }
  
  .w-full.py-6.px-3 {
    width: 16rem;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
  }
  
  /* Styles for the product container */
  .border.bg-white.shadow-lg.rounded-lg.overflow-hidden {
    border: 1px solid #e2e8f0;
    background-color: #ffffff;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border-radius: 0.375rem;
    overflow: hidden;
}
  
  /* Styles for the product image */
  a[href="{{ product.url }}"] .h-80.overflow-hidden {
    height: 20rem;
    overflow: hidden;
  }
  
  a[href="{{ product.url }}"] .w-full.h-full.object-cover {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Styles for the product details */
  .flex.flex-col.p-4 {
    display: flex;
    flex-direction: column;
    padding: 1rem;
  }
  
  .text-sm.text-gray-400 {
    font-size: 0.875rem;
    color: #718096;
  }
  
  a[href="{{ product.url }}"].text-gray-700.uppercase.font-medium {
    text-decoration: none;
    color: #4a5568;
    text-transform: uppercase;
    font-weight: 500;
  }
  
  p.text-gray-500 {
    color: #718096;
  }
  
  /* Placeholder image styles (if used) */
  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background-color: #f7fafc;
  }
  
  /* Pagination styles */
  /* Add your pagination styles here */
  
</style>
    
  {% schema %}
  {
      "name": "Template Collection",
      "settings": [
          {
              "type": "number",
              "id": "number_of_products_per_page",
              "default": 6,
              "label": "Number of products per page"
          }
      ]
  }
  {% endschema %}
<script>
    // Get references to the links and forms
    const recoverPasswordLink = document.getElementById('recoverPasswordLink');
    const backToLoginLink = document.getElementById('backToLoginLink');
    const loginForm = document.querySelector('[x-show="loginForm"]');
    const pwRecoverForm = document.querySelector('[x-show="pwRecoverForm"]');

    // Add click event listeners to toggle forms
    recoverPasswordLink.addEventListener('click', (e) => {
        e.preventDefault();
        loginForm.style.display = 'none';
        pwRecoverForm.style.display = 'block';
    });

    backToLoginLink.addEventListener('click', (e) => {
        e.preventDefault();
        pwRecoverForm.style.display = 'none';
        loginForm.style.display = 'block';
    });
</script>
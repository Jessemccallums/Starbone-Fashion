<div class="custom-blog-section">
    {% if section.settings.blog %}
      {% assign blog = blogs[section.settings.blog] %}
      {% assign articles = blog.articles %}
      
      <div class="containerx">
        {% comment %} <h2>{{ blog.title }}</h2> {% endcomment %}
        <div class="blog-posts">
          {% for article in articles %}
            <div class="blog-post">
              {% if article.image %}
                <a href="{{ article.url }}" class="blog-post-image" style="background-image: url('{{ article.image.src | img_url: '1024x1024' }}');">
                  <h3>{{ article.title }}</h3>
                </a>
              {% endif %}
              <p>{{ article.content | strip_html | truncatewords: 50 }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <p>No blog selected. Please choose a blog to display its posts.</p>
    {% endif %}
  </div>
  
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap');
    .containerx{
     margin-top: 50px
    }

    .custom-blog-section {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      }
      
      .custom-blog-section .containerx {
       
        padding: 20px;
      }
      
      .custom-blog-section h2 {
        text-align: center;
        font-size: 28px;
        color: #333;
        margin-bottom: 50px; /* Increased margin for a more spacious look */
      }
      
      .custom-blog-section .blog-posts {
        gap: 30px;
        display: flex;
        flex-direction: column;
      }
      
      .custom-blog-section .blog-post {
        background-color: #ffffff;
        border: none;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
      }
      
      .custom-blog-section .blog-post:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 12px rgba(0,0,0,0.2);
      }
      
      .custom-blog-section .blog-post h3 {
        font-size: 20px;
        color: #007bff;
        margin-top: 15px; /* Space above title */
      }
      
      .custom-blog-section .blog-post h3 a {
        color: inherit;
        text-decoration: none;
        transition: color 0.3s ease;
      }
      
      .custom-blog-section .blog-post h3 a:hover {
        color: #0056b3;
      }
      
      .custom-blog-section .blog-post img {
        width: 100%; /* Full width images */
        height: auto;
        border-top-left-radius: 8px; /* Rounded corners at the top of image */
        border-top-right-radius: 8px;
      }
      
     
      
      /* Add this if you want the image to darken slightly on hover */
      .custom-blog-section .blog-post img:hover {
        opacity: 0.9;
      }
      
      /* Responsive adjustments */
      @media (max-width: 992px) {
        .custom-blog-section .blog-posts {
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }
      }
      
      @media (max-width: 600px) {
        .custom-blog-section .blog-posts {
          grid-template-columns: 1fr;
        }
      }




      .custom-blog-section .blog-post .blog-post-image {
        display: block;
        position: relative;
        height: 300px; 
        background-size: cover;
        background-position: center;
        text-decoration: none;
      }
      
      .custom-blog-section .blog-post .blog-post-image h3 {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background: none;
            color: #fff;
            padding: 10px;
            margin: 0;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            font-size: 36px;
            text-align: center;
            font-family: 'Libre Baskerville', serif;
            font-weight: 700;
      }
      
      .custom-blog-section .blog-post p {
            font-size: 16px;
            line-height: 1.6;
            color: #666;
            padding: 20px;
            margin-top: 20px;
            flex-grow: 1;
            text-align: center;
      }
      
      /* Continue with the rest of your CSS... */
      
      
      
  </style>
  

{% schema %}
{
  "name": "Custom Blog Section",
  "settings": [
    {
      "id": "blog",
      "type": "blog",
      "label": "Select Blog",
      "info": "Choose which blog to display posts from."
    }
  ],
  "presets": [
    {
      "name": "Custom Blog Section",
      "category": "Blog"
    }
  ]
}
{% endschema %}

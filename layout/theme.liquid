<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <!-- Add Slick slider CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
    <!-- Add Slick slider Theme CSS (Optional) -->
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"
    >
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <!-- Header Content: CSS, JavaScript, and Meta Tags -->
    {{ content_for_header }}
    <!-- Shopify's required content_for_header -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'index.css' | asset_url | stylesheet_tag }}
    <!-- External libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  </head>
  <body>
    <!-- Site Header -->
    <header>
      {% section 'header' %}
    </header>

    <!-- Main Content -->
    <main class="main sections" role="main">
      {{ content_for_layout }}
    </main>

    <!-- Site Footer -->
    <footer>
      {% section 'footer' %}
    </footer>

    <!-- Footer Content: JavaScript Files -->
    {{ 'application.js' | asset_url | script_tag }}
    {{ 'index.js' | asset_url | script_tag }}
    {{ content_for_footer }}
    <!-- Shopify's required content_for_footer -->
    <!-- External JavaScript libraries -->
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="https://cdn.jsdelivr.net/jquery.slick/1.8.1/slick.min.js"></script>
  </body>
</html>
